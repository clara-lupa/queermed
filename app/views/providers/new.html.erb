<div class="container">
  <div class="container-provider mt-120">
    <div class="form mt-80">

      <%= simple_form_for(@provider) do |f| %>

      <div class="form-inputs">
          <%= f.input :title,
                      autofocus: true,
                      label: false,
                      placeholder: "Title"%>
          <%= f.input :first_name,
                      label: false,
                      placeholder: "First Name" %>
           <%= f.input :last_name,
                      label: false,
                      placeholder: "Last Name" %>
          <%= f.input :specialty, collection: @specialty_array,
                      label: false,
                      include_blank: "Specialty" %>
          <%= f.input :address,
                      label: false,
                      placeholder: "Street Nr., Zip Code City" %>
          <%= f.input :phone_number,
                      label: false,
                      placeholder: "Phone" %>
          <%= f.input :email,
                      label: false,
                      placeholder: "E-mail" %>
          <%= f.input :homepage,
                      label: false,
                      placeholder: "Website" %>
       <div class="form-actions">
            <%= f.button :submit, "Submit", class: "button-black" %>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>

