<div class="contact-details">
  <h2>Contact</h2>
  <div class="contact-container">
    <div class="contact-grid">
      <p class="street"> <%= @street %> </p>
      <p class="city"> <%= @city %> </p>
      <p class="phone"> <%= provider.phone_number if provider.phone_number %> </p>
      <% if provider.homepage.present? %>
        <a class="homepage" href= <%= provider.homepage%> target="_blank" >Visit Homepage</a>
      <% end %>
    </div>
  </div>
</div>
