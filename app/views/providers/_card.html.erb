<div class="card-provider">
  <div class="card-provider-infos">
    <h2><%= provider.title %> <%= provider.first_name %> <%=provider.last_name %></h2>
    <h6><%= provider.speciality %></h6>
    <p><%= image_tag "favourite", class:"star" %></p>
    <% if @location %>
      <p><%= instrument.distance(location).round(1) %>km</p>
    <% else %>
      <p>4.5km</p>
    <% end %>
    <p class="people-icon">6 <%= image_tag "people" %></p>
  </div>
</div>
