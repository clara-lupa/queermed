<div class="container-content">
  <div class="container-index">
   <h1>We found <%= @providers.count %> results</h1>
  <%#= render "shared/search_form", class:"search-form" %>
    <div class="cards-grid-index">
      <% unless @providers.empty? %>
        <% @providers.each do |provider| %>
          <div><%= render "shared/card_index", provider: provider %></div>
          <% end %>
      <% else %>
        <p> There are no results for your search yet. Sorry!</p>
      <% end %>
    </div>
  </div>
  <%= render "shared/map_index" %>
</div>


