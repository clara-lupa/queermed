<div class="container-content">
  <div class="container-index">
    <h1>Search Results</h1>
    <% unless @providers.empty? %>
      <div class="cards-grid-index">
        <% @providers.each do |provider| %>
          <div><%= render "shared/card_index", provider: provider %></div>
        <% end %>
      </div>
    <% else %>
      <p> There are no results for your search yet. Sorry!</p>
      <p> Try a new <%= link_to "search", :root %> or <%= link_to "add", :new_provider %> a provider yourself. </p>
    <% end %>
  </div>
  <%= render "shared/map" %>
</div>


