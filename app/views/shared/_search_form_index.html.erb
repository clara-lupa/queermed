<%= form_tag providers_path, method: :get, class: "form-row search-form-index justify-content-between" do %>
  <div class="col-4">
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Search for ..."
    %>
  </div>
  <div class="col-6">
    <%= text_field_tag :location,
      params[:location],
      class: "form-control address-input",
      placeholder: "Where?",
      required: true
    %>
  </div>
  <div class="col-2">
    <%= button_tag "Search", type: "submit", class: "button-black" %>
  </div>
<% end %>

