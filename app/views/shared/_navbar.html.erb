<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
   <%= link_to root_path, class: "navbar-brand" do %>
     <%= image_tag "queermed-logo.png" %>
   <% end %>
  <div class="nav-links">
    <li class="nav-item">
      <%= link_to "find healthcare provider", root_path, class: "nav-link" %>
    </li>
    <li class="nav-item">
      <p>|</p>
    </li>
    <li class="nav-item">
      <%= link_to "add healthcare provider", new_provider_path, class: "nav-link" %>
    </li>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li><%= link_to conversations_path do %>
         <i class="fas fa-envelope" id="envelope-icon" style="visibility:hidden"></i>
         <% end %>
        </li>
        <li><p>Hello <%= current_user.nickname %>!</p></li>
        <li class="nav-item dropdown">
          <%= image_tag current_user.avatar, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right user" aria-labelledby="navbarDropdown" data-user-id="<%= current_user.id %>">
            <%= link_to "Inbox", conversations_path, class: "dropdown-item" %>
            <%= link_to "Favorites", shortlists_index_path, class: "dropdown-item" %>
            <%= link_to "Profile", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
