
<div class="container conversations-container" id="inbox">
  <h1>Your Conversations</h1>
  <% if @conversations.present? %>
    <% @conversations.reverse.each do |conversation| %>
      <%= render "conversation_card", conversation: conversation %>
    <% end %>
  <% else %>
    <p>You have no conversations yet. </p>
    <p> <%= link_to "Search", :root %> for a provider and ask your peers about their experiences with them! </p>
  <% end %>

</div>
